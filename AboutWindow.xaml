<Window x:Class="Sierra_Romeo.AboutWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:Sierra_Romeo" mc:Ignorable="d" Title="About Sierra Romeo" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Sierra Romeo 1.0.0 - with thanks to Steve, Pauline, Rick, and all the 1800 operators" TextWrapping="Wrap" Margin="0,10" />
        <Button Content="OK" Grid.Row="2" Margin="0,10" HorizontalAlignment="Right" IsCancel="True" IsDefault="True" />
    </Grid>
</Window>
